<%- include("partials/_header") %>

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-9">
        <h1 class="">Gestion de los directores</h1>
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>nÂ°</td>
              <td>nombre</td>
              <td>estado</td>
              <td>fecha Creacion</td>
              <td>fecha actualizacion</td>
            </tr>
          </thead>
          <tbody>
            <% if (directores) { %>
              <% for(var i=0; i < directores.length; i++) { %>
                <tr>
                  <td>
                    <%= (i + 1) %>
                  </td>
                  <td>
                    <%= directores[i].nombre %>
                  </td>
                  <td>
                    <%= directores[i].estado %>
                  </td>
                  <td>
                    <%= directores[i].fechaCreacion %>
                  </td>
                  <td>
                    <%= directores[i].fechaActualizacion %>
                  </td>

                  <td class="d-flex gap-2">
                    <a href="/updateDirector/<%= directores[i].id %>" class="btn btn-info">
                      Edit
                    </a>
                    <a href="/deleteDirector/<%= directores[i].id %>" class="btn btn-danger">
                      Delete
                    </a>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-3">
        <div class="card-body">
          <form action="/addDirectores" method="POST">
            <input type="text" name="nombre" placeholder="nombre" class="form-control mb-2" required autofocus />
            <input type="text" name="estado" placeholder="estado" class="form-control mb-2" required />


            <button type="submit" class="btn btn-info">guardar director</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/_footer") %>
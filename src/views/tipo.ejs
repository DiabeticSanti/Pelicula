<%- include("partials/_header") %>

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-9">
        <h1 class="">Gestion de los tipo</h1>
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>nÂ°</td>
              <td>nombre</td>
              <td>estado</td>
              <td>fecha Creacion</td>
              <td>fecha actualizacion</td>
              <td>descripcion</td>
            </tr>
          </thead>
          <tbody>
            <% if (tipo) { %>
              <% for(var i=0; i < tipo.length; i++) { %>
                <tr>
                  <td>
                    <%= (i + 1) %>
                  </td>
                  <td>
                    <%= tipo[i].nombre %>
                  </td>
                  <td>
                    <%= tipo[i].estado %>
                  </td>
                  <td>
                    <%= tipo[i].fechaCreacion %>
                  </td>
                  <td>
                    <%= tipo[i].fechaActualizacion %>
                  </td>
                  <td>
                    <%= tipo[i].descripcion %>
                  </td>

                  <td class="d-flex gap-2">
                    <a href="/updateTipo/<%= tipo[i].id %>" class="btn btn-info">
                      Edit
                    </a>
                    <a href="/deleteTipo/<%= tipo[i].id %>" class="btn btn-danger">
                      Delete
                    </a>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-3">
        <div class="card-body">
          <form action="/addTipo" method="POST">
            <input type="text" name="nombre" placeholder="nombre" class="form-control mb-2" autofocus />
            <input type="text" name="descripcion" placeholder="descripcion" class="form-control mb-2" />

            <button type="submit" class="btn btn-info">guardar tipo</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/_footer") %>